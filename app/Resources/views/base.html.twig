        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('static/css/base.css') }}">
        {% endblock %}
    </head>
    <body>
        <div id="page">
